<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundColor"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/titleMarginTop"
            android:text="@string/titleText"
            android:textColor="@android:color/black"
            android:textSize="@dimen/titleTextSize"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/name_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/editText_margin_top"
            android:backgroundTint="@android:color/black"
            android:hint="@string/name_editText"
            android:inputType="textCapWords"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/introImage_marginTop"
            android:adjustViewBounds="true"
            android:src="@drawable/main_img" />

        <Button
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/startButton_marginTop"
            android:background="@color/startButtonColor"
            android:onClick="startQuiz"
            android:text="@string/startButtonText"
            android:textColor="@android:color/white"
            android:textSize="@dimen/startButtonTextSize"
            android:textStyle="italic" />
    </LinearLayout>
</ScrollView>